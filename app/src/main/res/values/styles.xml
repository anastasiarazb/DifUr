<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <!--<item name="colorAccent">@color/accent</item>-->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="textInputStyle">@style/TextInput</item>

    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--item name="theme=">@style/ThemeOverlay.AppCompat.Dark</item-->
    </style>
    <style name="TextInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextHardcoded"></style>

    <style name="DifurCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/ap_white</item>
    </style>

    <style name="InnerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalContainer" parent="InnerContainer">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalContainer" parent="InnerContainer">
        <item name="android:orientation">vertical</item>
    </style>


</resources>
