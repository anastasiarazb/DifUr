<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Виды уравнений"
            android:id="@+id/Tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.219"
            android:layout_alignParentTop="true"
            android:layout_marginTop="139dp" android:layout_alignStart="@+id/textView"/>
    <ExpandableListView
            android:id="@+id/expListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Tv">
    </ExpandableListView>
    <TextView
            android:text="y' = "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" android:layout_alignParentTop="true" android:layout_marginTop="36dp"
            android:id="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_marginTop="21dp" android:layout_toEndOf="@+id/textView"
            android:id="@+id/editText" android:hint="f(x, y)"/>
    <TextView
            android:text="y("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="88dp" android:id="@+id/textView4"/>
    <EditText
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_alignParentStart="true" android:layout_marginStart="20dp"
            android:hint="0" android:layout_alignBaseline="@+id/textView4" android:gravity="center_horizontal"/>
    <EditText
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText6" android:inputType="numberDecimal"
            android:hint="1" android:layout_alignBaseline="@+id/textView4"
            android:gravity="center_horizontal" android:layout_alignStart="@+id/button"/>
    <EditText
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText9" android:inputType="numberDecimal"
            android:hint="-1" android:layout_alignBaseline="@+id/textView4"
            android:gravity="center_horizontal" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText8" android:inputType="numberDecimal"
            android:hint="0" android:layout_toEndOf="@+id/textView5" android:layout_alignBaseline="@+id/textView4"
            android:gravity="center_horizontal"/>
    <TextView
            android:text=") = "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toEndOf="@+id/editText5"
            android:layout_alignTop="@+id/textView4" android:id="@+id/textView5"/>
    <Button
            android:text="Решить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
            android:layout_alignTop="@+id/editText" android:id="@+id/button"/>
    <TextView
            android:text="до"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4" android:id="@+id/textView6"
            android:layout_alignEnd="@+id/editText"/>
    <TextView
            android:text="x от"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4" android:id="@+id/textView7" android:layout_alignParentStart="true"
            android:layout_marginStart="141dp"/>

</RelativeLayout>