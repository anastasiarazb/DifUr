<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:auto="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            tools:context=".ui.activity.SystemOnePlotActivity"
            android:layout_gravity="center">


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_system_one_plot"
                style="@style/Toolbar"
                android:title="Решение"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="10dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Исходная система"
                      android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
            />
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                style="@style/DifurCardViewStyle">
                <LinearLayout style="@style/VerticalContainer">
                    <io.github.kexanie.library.MathView android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/tex_all_solutions"
                                                        auto:engine="KaTeX"
                                                        auto:text="Lorem ipsum"/>



                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="График решения"
                      android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
            />

            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                style="@style/DifurCardViewStyle"
                                                android:layout_gravity="center">

                <com.androidplot.xy.XYPlot
                        style="@style/APDefacto.Light"
                        android:id="@+id/system_XYPlot"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_margin="15dp"
                        android:minHeight="550dp"

                />

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>





</ScrollView>

